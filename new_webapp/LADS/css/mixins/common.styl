// some common css rule groupings

stdAlpha = 0.85

width-height(n)
    width n
    height n

left-top(n)
    left n
    top n

right-bottom(n)
    right n
    bottom n

noMargPadding()
    margin 0px
    padding 0px

basicFullSize()
    width-height 100%
    noMargPadding()
    left-top 0px

textOverflowEllipsis()
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

createLinGrad(startcolor, endcolor)
    background -webkit-gradient(linear, left top, left bottom, from(startcolor), to(endcolor))
    background linear-gradient(to bottom, startcolor, endcolor)

transBlack(alpha)
    if mixin
        background-color rgba(0, 0, 0, alpha)
    else
        rgba(0, 0, 0, alpha)

transWhite(alpha)
	if mixin
		background-color rgba(255, 255, 255, alpha)
	else
		rgba(255, 255, 255, alpha)