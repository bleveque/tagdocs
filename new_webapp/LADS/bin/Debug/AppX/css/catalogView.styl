@import "mixins/common"

#catalogRoot
    width-height 100%
    position relative

#catalogRoot .overlay
    width-height 100%
    position absolute
    transBlack(0.5)

#catalogRoot .bgimage
    width-height 100%
    position absolute
    background-position center
    background-size cover

#catalogRoot .header
    position relative
    height 8%
    overflow hidden
    text-overflow ellipsis

#catalogRoot .backButtonAreaLoading
    top 25%
    left 2%
    position absolute
    display none

#catalogRoot .progressCircle
    width 5%
    height auto

#catalogRoot .backButtonArea
    top 0.5%
    left 0px
    height 1.1%
    width 2.8%
    margin 10px
    float left
    position absolute

#catalogRoot #catalog-back-button
    width 100%
    height auto
    position relative

#catalogRoot .exhibitionTitle
    white-space nowrap
    font-size 300%
    width 100%
    text-align center
    position absolute

#catalogRoot .row1
    position relative
    top 2%
    width 95%
    height 35%
    left 2.5%

#catalogRoot #inputField
    max-height 10%
    max-width 15%
    position absolute
    right 0px
    border-style solid
    background-color white
    border-color rgb(167, 180, 174)
    border-width 0.2em
    font-size 1em
    color rgb(120, 128, 119)
    z-index 51

#catalogRoot #backgroundSearch
    position absolute
    right 0
    top 0
    transBlack(0.5)
    height 100%
    visibility hidden
    z-index 0

#catalogRoot .filterBox
    max-height 100%
    min-height 75%
    width 23%
    padding 1.1%
    position absolute
    transBlack(0.5)
    right 22.7%
    color white
    overflow-x hidden
    overflow-y scroll
    visibility hidden

#catalogRoot .heatmapDivContainer
    height 100%
    width 50%
    position relative
    z-index 200
    transBlack(0.5)
    overflow hidden

#catalogRoot .sortArea
    width 96%
    margin-left 2%
    margin-bottom 1%
    padding-top 1%
    position relative
    overflow hidden
    font-size large

#catalogRoot .dataButton
    float left
    margin 0 4%

#catalogRoot .heatmapDiv
    position relative
    height 80%
    width 90%
    margin-left 5%
    z-index 49
    transBlack(0.5)
    border-color white
    border-style solid

#catalogRoot .originmapDiv
    margin-left 5%
    height 80%
    width 90%
    position relative
    z-index 49
    overflow hidden

#catalogRoot .expandarrowdiv
    position absolute
    right-bottom 0%
    width-height 30px
    z-index 100

#catalogRoot .expandarrow
    margin-top 15%
    margin-left 15%
    width-height 85%

#catalogRoot .sortContainer
    position absolute
    height 36px
    width 15%
    top 50px
    float right
    right 0%

#catalogRoot .sortSelector
    color white
    border solid 3px rgba(255, 255, 255, 1)
    width-height 100%
    transBlack(0.5)

#catalogRoot .menuOption
    color white
    border-color rgba(0, 0, 0, 0.5)
    overflow hidden
    background no-repeat scroll
    transBlack(0.5)

#catalogRoot .timelineDivContainer
    height 40%
    width 100%
    position absolute
    top 50%

#catalogRoot .timelineDiv
    width-height 100%
    padding 10px
    position relative
    z-index 49
    transBlack(0.5)

#catalogRoot .imageText
    position absolute
    left 3%
    top 7%
    font-size 100%
    color white
    width 60%
    overflow-y hidden
    overflow-x auto
    text-overflow ellipsis
    white-space nowrap
    height 116%
    float left

#catalogRoot .fullScreenIcon
    width 25%
    height 60%
    top 20%
    left 10%
    position relative

#catalogRoot .fullScreenButton
    right-bottom 0%
    height 21.6%
    position absolute
    width 35%