#artmodeRoot #minimapContainer
    width 100%
    height 20%
    background-color transBlack(0.9)
    bottom 0%
    left 0%
    position absolute
    vertical-align middle
    border 1px solid white

#artmodeRoot .minimaprect
    position absolute
    border solid white 3px
    z-index 50

#artmodeRoot .minimap
    position absolute
    left-top 0%
    right 0
    margin auto
    bottom 0%
    z-index 10

#artmodeRoot .drawerHeader
    width 100%
    float left

#artmodeRoot .label
    font-size 25%
    width 50%
    float left

#artmodeRoot .toggleContainer
    width 45px
    position relative
    padding-top 8px
    float right

#artmodeRoot .plusToggle
    width-height 23px

#artmodeRoot .drawerContents
    display none
    clear both
    font-size 16px

#artmodeRoot .exhibitionPicker
    width-height 40%
    position absolute
    top 20%
    left 30%
    background-color black
    z-index 10000
    border 3px double white
    padding 1.5%
    display block

#artmodeRoot .infoLabel
    width 100%
    color white
    font-size 200%
    margin-bottom 2%

#artmodeRoot .exhibitionsList
    width 100%
    height 60%
    overflow auto
    margin-bottom 2%

#artmodeRoot .cancelButton
    width 10%
    left 85%
    top 89%
    color white
    font-size 140%
    border-color white
    position absolute

#artmodeRoot .exhibitionLabel
    width 80%
    color white
    font-size 180%

#artmodeRoot .exhibitions-list-cell
    width 100%
    height 18%
    position relative
    border solid transparent
    border-width 5px 0px 5px 0px
    display inline-block
    overflow hidden
    vertical-align text-top
    margin-bottom 2%

#artmodeRoot .textbox
    width 70%
    height 100%
    font-size 180%
    display inline-block
    word-wrap ''
    overflow hidden

#artmodeRoot .imgLoader
    width 7.5%
    height 100%
    float left
    margin-right 2.5%
    margin-left 6%
    top 5%
    border 1px solid black
    display inline-block

#artmodeRoot .feedbackContainer
    width 100%
    top 2.3%
    position relative
    float left

#artmodeRoot .feedback-text
    font-size 25px
    height 10%
    position relative
    display inline
    vertical-align middle
    left 5%

#artmodeRoot .feedback-icon
    width 10%
    height auto
    position relative
    display inline
    vertical-align middle

#artmodeRoot #splitscreenContainer
    font-size 25px
    width 100%
    position relative
    float left
    margin-bottom 0.5%

#artmodeRoot .splitscreen-text
    font-size 25px
    height 10%
    position relative
    display inline
    vertical-align middle
    left 5%

#artmodeRoot .splitscreen-icon
    width 10%
    height auto
    vertical-align middle
    display inline
    position relative