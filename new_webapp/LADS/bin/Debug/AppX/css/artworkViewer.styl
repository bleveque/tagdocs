@import "mixins/common"

#artmodeRoot
    width-height 100%
    position relative

// holders for the artwork (let these be created dynamically for now)
#artmodeRoot #holder1
    width-height 100%
    position absolute
    z-index 0

#artmodeRoot #holder2
    basicFullSize()
    border #000000 // used currentColor in win8, but might not be supported by webkit
    position relative
    text-align left

#artmodeRoot #holder3
    basicFullSize()
    border #000000 // currentColor
    position absolute
    text-align left
    overflow hidden

#artmodeRoot .sideBar
    left 0px
    top 0px
    position absolute
    display block
    background-color transBlack(stdAlpha)
    height 100% // width is set programatically
    z-index 100

#artmodeRoot .toggler
    position absolute
    top 45%
    width-height 12%
    background-color transBlack(stdAlpha)
    z-index 100

#artmodeRoot .togglerImage
    position absolute
    top 35%
    left 20%
    width auto
    height 30%

#artmodeRoot .backButtonContainer
    width-height 50px
    margin 10px

#artmodeRoot .backButton
    width-height 100%

#artmodeRoot .sideBarSections
    width 89%
    height 90%
    left 5%
    position relative

#artmodeRoot .sideBarInfo
    width 100%
    height 78%
    margin-bottom 2%

#artmodeRoot .row1
    width 100%
    height 20%
    margin-bottom 3%

#artmodeRoot .info
    font-size 22px
    color white
    width 100%
    height 160%
    float left
    overflow hidden
    white-space nowrap
    padding-right 7%

#artmodeRoot #infoTitle
    font-size 30px
    clear both
    textOverflowEllipsis()

#artmodeRoot #infoArtist
    font-size 22px
    textOverflowEllipsis()

#artmodeRoot #infoYear
    @extend #artmodeRoot #infoArtist

#artmodeRoot .midSectionContainer
    position relative
    height 20%
    min-height 115px
    width 100%
    float left
    overflow-y auto
    padding-right 7%
    margin-top 5%

#artmodeRoot .midSection
    position relative
    width 100%
    top 0%
    overflow-y hidden

#artmodeRoot .topfadeout
    position absolute
    display none
    top 25%
    left 0px
    width 100%
    height 5%
    background -ms-linear-gradient(top, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 52%, rgba(0,0,0,0) 100%)

#artmodeRoot .bottomfadeout
    position absolute
    bottom 20%
    left 0px
    width 100%
    height 5%
    background -ms-linear-gradient(top, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 52%, rgba(0,0,0,1) 100%)

#artmodeRoot .divider
    position relative
    height 6px
    clear both

#artmodeRoot #assetContainer
    overflow auto
    height 45%

#artmodeRoot .locationHistoryIcon
    width 9.5%
    height auto
    position relative
    display inline
    vertical-align middle

#artmodeRoot .locationHistoryContainer
    position relative
    width 100%
    margin-bottom 0.5%
    float left

#artmodeRoot .locationHistory
    position relative
    font-size 25px
    left 5%
    display inline
    vertical-align middle

#artmodeRoot .locationHistoryDiv
    display none
    // determine width in js
    top 10%
    height 80%
    z-index 99
    position absolute
    overflow-x hidden

#artmodeRoot .locationHistoryPanel
    width 87.5%
    height 100%
    z-index 99
    background-color transBlack(stdAlpha)

#artmodeRoot .mapOverlay
    width-height 100%
    position absolute
    z-index 10000
    background-color transBlack(0.5)
    left auto
    top auto

#artmodeRoot .mapOverlayLabel
    position relative
    float right
    margin-right 21%
    top 35%
    font-size 22pt // pt rather than px?

#artmodeRoot .lpContents
    position relative
    left-top 2.5%
    width-height 95%

#artmodeRoot #lpTitle
    font-size 25px
    margin-bottom 20px

#artmodeRoot .lpMapDiv
    position relative
    height 50%
    border 1px solid white
    text-align center
    background0color rgb(94, 94, 94)
    margin-bottom 20px

#artmodeRoot .lpTextInfoDiv
    height 40%
    width 100%
    float left

#artmodeRoot .lpTextDiv
    height 100%
    width 40%
    overflow auto
    float left
    font-size 20px

#artmodeRoot .lpInfoDiv
    float left
    right 0
    top 0
    padding-left 2%
    height 100%
    width 58%
    overflow auto
    font-size 20px

#artmodeRoot .locationHistoryToggle
    position absolute
    background-color transBlack(stdAlpha)
    top 45%
    width 45px
    height 15%

#artmodeRoot .locationHistoryToggleIcon
    position absolute
    top 35%
    left 20%
    width auto
    height 30%

