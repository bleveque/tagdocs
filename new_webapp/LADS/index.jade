//- mixins

mixin styles(paths)
    for path in paths
        link(rel="stylesheet", href=path)

mixin scripts(paths)
    for path in paths
        script(src=path)

mixin scripts_js(paths)
    for path in paths
        script(src="js/"+path)

mixin scripts_js_LADS(paths)
    for path in paths
        script(src="js/LADS/"+path)

mixin seadragon_scripts(paths)
    for path in paths
        script(src="js/seadragon/src/"+path)

